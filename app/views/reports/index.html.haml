#sidebar= render :partial => 'shared/node_manager_sidebar'
#main
  .header
    %h2
      Reports
      - if @node
        %span.alt for
        = link_to h(@node.name), @node
      %span.count== (#{@reports.total_entries})

  .item
    = render :partial => 'reports/reports_table', :locals => { :reports => @reports, :node => @node }
